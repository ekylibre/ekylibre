<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="superficial_plowing" categories="soil_working, crop_protection" actions="plowing, loosening" optional-actions="herbicide, organic_matter_burying">
    <parameters>
      <target name="land_parcel" filter="is land_parcel and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <tool name="tractor" filter="can tow(equipment) and can move" cardinality="*"/>
      <tool name="stubble_cultivator"   filter="can plow_superficially" cardinality="*"/>
      <doer name="driver"  filter="can drive(equipment) and can move" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>