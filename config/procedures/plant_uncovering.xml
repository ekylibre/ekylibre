<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="plant_uncovering" categories="crop_protection" actions="plant_uncovering">
    <parameters>
      <target name="cultivation" filter="(is plant or is land_parcel) and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <output name="protective_canvas" filter="can care(plant) and can cover(plant)" cardinality="*">
        <handler name="population"/>
      </output>
      <doer name="driver"  filter="can drive(equipment) and can move" cardinality="*"/>
      <doer name="doer" filter="is worker" cardinality="*"/>
      <tool name="tractor" filter="can tow(equipment) and can move" cardinality="*"/>
      <tool name="uncover"  filter="can uncover(plant)" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>