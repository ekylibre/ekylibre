<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="vine_spraying_without_fertilizing" categories="vine_protection" optional-actions="herbicide, fungicide, insecticide, molluscicide, nematicide, acaricide, bactericide, game_repellent, virucide, biostimulation, growth_regulator" position="10">
    <parameters>
      <target name="plant" filter="is vitis and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <input name="plant_medicine" filter="is preparation and can care(plant)" display-status="miscibility" >
        <handler name="population"/>
        <handler indicator="net_mass" unit="kilogram"
                 if="population_counting_is(PRODUCT, :decimal) > 0 and PRODUCT..net_mass? and (product_usages_among_dimensions(PRODUCT, :mass) == 1)"
                 backward="POPULATION * PRODUCT..net_mass(kilogram)"
                 forward="VALUE / PRODUCT..net_mass(kilogram)"/>
        <handler indicator="net_volume" unit="liter"
                 if="population_counting_is(PRODUCT, :decimal) > 0 and PRODUCT..net_volume? and (product_usages_among_dimensions(PRODUCT, :volume) == 1)"
                 backward="POPULATION * PRODUCT..net_volume(liter)"
                 forward="VALUE / PRODUCT..net_volume(liter)"/>
        <handler indicator="mass_area_density" unit="kilogram_per_hectare"
                 if="(sum_working_zone_areas(plant) != 0) and PRODUCT..net_mass? and (product_usages_among_dimensions(PRODUCT, :mass) == 1)"
                 backward="(POPULATION * PRODUCT..net_mass(kilogram)) / sum_working_zone_areas(plant, :hectare)"
                 forward="(VALUE * sum_working_zone_areas(plant, :hectare)) / PRODUCT..net_mass(kilogram)"/>
        <handler indicator="volume_area_density" unit="liter_per_hectare"
                 if="PRODUCT..net_volume? and sum_working_zone_areas(plant) != 0 and (product_usages_among_dimensions(PRODUCT, :volume) == 1)"
                 backward="(POPULATION * PRODUCT..net_volume(liter)) / sum_working_zone_areas(plant, :hectare)"
                 forward="(VALUE * sum_working_zone_areas(plant, :hectare)) / PRODUCT..net_volume(liter)"/>
        <attribute name="usage_id" />
        <attribute name="allowed_entry_factor" />
        <attribute name="allowed_harvest_factor" />
      </input>
      <doer name="driver" filter="can drive(tractor) and can move" cardinality="*"/>
      <tool name="tractor" filter="is equipment and can catch(equipment) and can tow(equipment)" cardinality="*"/>
      <tool name="sprayer" filter="can spray" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>
