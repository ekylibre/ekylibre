<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="vine_inter_row_grinding" categories="vine_soil_working_and_maintenance" actions="land_parcel_grinding, organic_matter_burying" position="80">
    <parameters>
      <target name="plant" filter="is vitis and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?" />
      </target>
      <doer name="driver" filter="can drive(equipment) and can move" cardinality="*" />
      <tool name="tractor" filter="can tow(equipment) and can move" cardinality="*" />
      <tool name="trailed_equipment" filter="is equipment and (can grind(plant) or can plow_superficially or can cut or can tamp)" cardinality="*" />
    </parameters>
  </procedure>
</procedures>
